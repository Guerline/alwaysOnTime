<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
	android:orientation="horizontal"
	android:weightSum="11"
	android:paddingTop="2dp"
	android:background="@color/background_color"
>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent" 
		android:orientation="vertical"
		android:layout_weight="8"
		android:weightSum="20"
	>

		<TextView
			android:id="@+id/list_routine_activity_title_view"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_centerHorizontal="true"
			android:padding="2dp"
			android:text="HEllllo"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#fff"
			android:layout_weight="13"
		/>

		<TextView
			android:id="@+id/list_routine_activity_start_end"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:background="#000"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_weight="7"
		/>

	</LinearLayout>

	<Button
		android:id="@+id/list_routine_activity_up"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:textColor="#fff"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/up"
		android:background="@color/background_color"	/>

	<Button
		android:id="@+id/list_routine_activity_down"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textColor="#fff"
		android:layout_toLeftOf="@+id/list_routine_activity_switch"
		android:layout_toStartOf="@+id/list_routine_activity_switch"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/down"
		android:background="@color/background_color"	/>
	<Button
		android:id="@+id/list_routine_activity_delete"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:textColor="#fff"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:drawableRight="@drawable/ic_action_delete"
		android:background="@color/background_color"
		/>
</LinearLayout>
