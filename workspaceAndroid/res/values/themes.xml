<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="HomeActionBarTheme"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/HomeActionBar</item>
    </style>
	
	<style name="ActivitiesActionBarTheme"
		parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActivitiesActionBar</item>
    </style>
	
	<style name="ActivitiesDialogTheme"
		parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/ActivitiesActionBar</item>
    </style>
	
	<style name="RoutinesDialogTheme"
		parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/RoutinesActionBar</item>
    </style>
    <style name="defaultDialogTheme"
		parent="@android:style/Theme.Holo">
       <item name="android:background">@color/background_color</item> 
        <item name="android:windowTitleStyle">@style/RoutinesActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="HomeActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/home_actionbar_background</item>
    </style>
	<style name="ActivitiesActionBar"
		parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/activities_background</item>
    </style>
	<style name="RoutinesActionBar"
		parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/routines_background</item>
    </style>
    	<style name="DefaultActionBar"
		parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/background_color</item>
    </style>
	<style name="RoutinesTitleDialog">
        <item name="android:background">@drawable/activities_background</item>
			
			<item name="android:padding">1dp</item>
			<item name="android:textStyle">bold</item>
			<item name="android:textSize">16dp</item>
		
    </style>
	<style name="ActivitiesTitleDialog"
		parent="android:Widget.TextView">
        <item name="android:background">@drawable/routines_background</item>
		<item name="android:gravity">center</item>
    </style>
	
</resources>
