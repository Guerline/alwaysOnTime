
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:weightSum="12"
	android:orientation="vertical"
    tools:context=".MainActivity$RoutineSectionFragment"
	android:textColor="@color/text_color"
	android:background="@color/background_color">

	

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="11"	>
		
		<TextView
			android:id="@+id/text_help_routines"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textStyle="bold"
			android:gravity="center"
			android:textColor="#fff"
			android:text="@string/routines_help"
			android:layout_alignParentTop="true"
			android:visibility="invisible"
		/>
		
  		<ListView 
			android:id="@android:id/list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_alignParentTop="true"
			android:layout_marginTop="5dp"
		>


		</ListView>
		
	</RelativeLayout>
	
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_alignParentBottom="true"
	>
			
		<Button 
			android:id="@+id/button_add_routine"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:drawableLeft="@drawable/ic_action_new"
			android:text="@string/action_new_routine" 
			android:background="@color/background_color"
			android:textColor="@color/routines_background"
			
		/>
		
		</LinearLayout> 

</LinearLayout>

